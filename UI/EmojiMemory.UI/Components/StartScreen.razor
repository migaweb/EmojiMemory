@inject NavigationManager NavigationManager

<div class="start-screen">
  <div class="title-section">
    <div class="emoji">🧠</div>
    <h1>Emoji Memory Match</h1>
    <p class="subtitle">Flip cards and match all pairs!</p>
  </div>

  <div class="difficulty-buttons">
    <button type="button" class="easy" @onclick="() => SetDifficulty(4, 4)">Easy (4x4)</button>
    <button type="button" class="hard" @onclick="() => SetDifficulty(5, 4)">Hard (5x4)</button>
  </div>

  <button type="button" class="start-button" @onclick="StartGame">Start Game (@(rows)x@(cols))</button>

  <div class="best-time">
    <span>⏱️ Best Time: <strong>@BestTime</strong></span>
  </div>
</div>

@code {
  private int rows = 4;
  private int cols = 4;
  private string BestTime => "00:42"; // Replace with localStorage or persistent state later

  private void SetDifficulty(int r, int c)
  {
    rows = r;
    cols = c;
  }

  private void StartGame()
  {
    NavigationManager.NavigateTo($"/game?rows={rows}&cols={cols}");
  }
}

